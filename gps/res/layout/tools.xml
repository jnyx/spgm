<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
     android:id="@+id/et_facultad"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:text="@string/etfacultad" />

     <Spinner
     android:id="@+id/spr_place_type"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/et_facultad" />

 <TextView
     android:id="@+id/et_seccion"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignRight="@+id/et_facultad"
     android:layout_below="@+id/spr_place_type"
     android:text="@string/etseccion" />

 <Spinner
     android:id="@+id/spr_place_name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/et_seccion" />

 <Button
     android:id="@+id/botonAceptar"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Aceptar" />

</LinearLayout>
